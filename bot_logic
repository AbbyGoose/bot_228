import random
import time
def coin():
    num = random.randint(0, 1)
    print('Бросаем монетку...')
    time.sleep(2)
    if num == 0:
        return 'Орёл!'
    else:
        return 'Решка!'

def gen_pass(pass_length):
    elements = "+-/*!&$#?=@<>"
    password = ""
    for i in range(pass_length):
        password += random.choice(elements)
    return password
